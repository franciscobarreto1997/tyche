<div class="navbar">
  <div class="brand">
    <%= link_to root_path do %>
      <%= image_tag "tyche-logo.png" %>
    <% end %>
  </div>
  <div class="search">
    <%= form_tag items_path, method: :get do %>
      <%= text_field_tag :query, params[:query], placeholder: "Search for items"%>
    <% end %>
  </div>
  <div class="links">
    <%= link_to "Upload Item", new_item_path, id: "upload-btn" %>
    <%= link_to "Chats", "#", id: "chats-btn" %>
    <% if user_signed_in? %>
      <i class="fas fa-user" id="user-btn"></i>
    <% else %>
      <%= link_to "Login", new_user_session_path, id: "chats-btn" %>
    <% end %>
  </div>
</div>
<div class="navbar-dropdown" hidden>
  <%= link_to "#" do %>
    <div class="link">
      <p>Exchanges</p>
    </div>
  <% end %>
  <%= link_to "#" do %>
    <div class="link">
      <p>Profile</p>
    </div>
  <% end %>
  <%= link_to destroy_user_session_path, method: :delete do %>
    <div class="link">
      <p>Logout</p>
    </div>
  <% end %>
</div>
