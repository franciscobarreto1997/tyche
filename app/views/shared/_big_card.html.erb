<% @items.each do |item| %>
  <%= link_to item_path(item) do %>
    <div class="big-card">
      <div class="picture">
      </div>
      <div class="left">
        <div class="details">
          <h4><%= item.title %></h4>
          <p>Looking for: <%= format_text(item.looking_for) %></p>
        </div>
        <div class="date">
          <p><%= item.created_at %></p>
        </div>
      </div>
      <div class="right">
        <div class="user">
          <div class="profile-picture">
          </div>
        </div>
        <div class="heart">
          <i class="far fa-heart" id="card-heart"></i>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
